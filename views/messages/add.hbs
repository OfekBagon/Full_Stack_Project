<h3>Add Message</h3>
<div class="row">
    <form action="/messages" method="POST" class="col s12"> <!-- POST request to /messages -->
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    <option value="public" selected>Public</option> <!-- public selected by default -->
                    <option value="private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Let us know what you think about:</h5>  
                <textarea id="body" name="body"  style="text-align: left !important;"></textarea> 
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>