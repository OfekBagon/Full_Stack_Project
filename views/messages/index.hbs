<link rel="stylesheet" href="../css/style.css">

<span style="color:#1565c0; font-size: 25px;  margin-top: 50px !important;">
    <b>Neighbors' messages:</b>
</span>

<div class="row" id="editt">
    {{#each messages}} 
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">

                    <h5><b>{{title}}</b></h5> 
                    <p>{{stripTags (truncate body 150)}}</p> 
                    <br>
                    <div class="chip"> 
                        <img src="{{user.image}}" alt="">
                        <a href="/messages/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/messages/{{_id}}" class="btn" ><b>Read More</b></a>
                    <form action="/messages/like/{{_id}}" method="POST">
                    {{#if like}}
                         <button type="submit"  class="btn like" ><i class="fas fa-thumbs-up"></i>
                         <i></i><i class="far fa-heart"> {{likes.length}}</i></button>
                    {{else}}
                        <button type="submit" class="btn like" ><i class="far fa-thumbs-up"></i>
                        <i></i><i class="far fa-heart"> {{likes.length}}</i></button>
                    {{/if}}
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <p><b>Tok Tok? no one post a messages yet.</b></p>
    {{/each}}    
</div>